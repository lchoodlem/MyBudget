@inject HttpClient Http

<MudText Typo="Typo.h3">Transaction Types</MudText>

<MudPaper Width="90%">

    <MudTable Items="@TransactionTypes" Hover="true" CanCancelEdit="true" >
        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Type</MudTh>
            <MudTh>(-/+)</MudTh>
            <MudTh>Description</MudTh>
            <MudTh>Edit</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Nr">@context.Id</MudTd>
            <MudTd DataLabel="Sign">@context.TypeName</MudTd>
            <MudTd DataLabel="Name">@context.Debit</MudTd>
            <MudTd DataLabel="Molar mass">@context.Description</MudTd>
            <MudTd DataLabel="Edit"></MudTd>
        </RowTemplate>

    </MudTable>

</MudPaper>



@code {
    private static List<TransactionType> TransactionTypes = new List<TransactionType>();

    protected override async Task OnInitializedAsync()
    {
        var result = await Http.GetFromJsonAsync<List<TransactionType>>("api/TransactionType");
        if (result != null)
            TransactionTypes = result;
    }


}
